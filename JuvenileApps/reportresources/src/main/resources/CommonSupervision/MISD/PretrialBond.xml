<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="55" margin-bottom="50">
<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false" allow-printing="false"/>
<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="${orderTitle}"/>
<viewer-preferences page-mode="NoThumbs" zoom="1"/>

	<font-def name="arial" family="arial" style="normal" size="12"/>
	<font-def name="arial_10" family="arial" style="normal" size="10"/>
	
	<header>
		<header-part halign="left"  width="510">
				<table width="510" columns="2">
					<table-row halign="center">
						<font name="arial">
							<cell colspan="2" halign="left"> ~${versionNumber} ${versionType} <b> ~CONDITIONS OF COMMUNITY SUPERVISION</b></cell>
						</font>
					</table-row>
					<table-row padding-top="5" padding-bottom="15">
						<font name="arial_10">
							<cell halign="left">
								~For: <if cond="${Name != null}"><u trim-body="true"> ~${Name}</u></if><else>_____________________</else>
							</cell>
							<cell halign="right">
								~Cause:  <if cond="${Cause != null}"><u> ~${Cause}</u></if><else>_____________________</else>
							</cell>
						</font>
					</table-row>
				</table>				
		</header-part>
	</header>
	
	<footer padding-top="10">
		<font name="arial_10">
			<footer-part halign="left" width="510">
				<table columns="2" widths="150, 30" halign="left">
					<table-row>
						<cell halign="left" >
							\t\t\t\t<b>Signed this </b> <if cond="${versionNumber == null && versionNumber == ""}"><u>${signedDay}</u></if><else>___________</else><b> day of </b><if cond="${signedMonth != null && signedMonth != ""}"><u>${signedMonth}</u></if><else>___________</else><b> A.D. </b><if cond="${signedYear != null && signedYear != ""}"><u>${signedYear}</u></if><else>__________</else>
						</cell>
					</table-row>
					<table-row padding-top="40">
						<cell halign="left">________________________________________</cell>
						<cell><u>Right Thumbprint</u></cell>
					</table-row>
					<table-row>
						<cell halign="left">JUDGE PRESIDING</cell>
					</table-row>
					<table-row>
						<cell halign="left">
							County Criminal Court at Law No. <if cond="${court != null}"><u>${court}</u></if><else>__________________</else>
						</cell>
					</table-row>
					<table-row>
						<cell halign="left">Harris County, Texas</cell>
					</table-row>
				</table>	
			</footer-part>
		</font>
	</footer>

	<table columns="2" border-style="none" widths="61,49" keep-together="true" line-spacing="1.25">
		<font name="arial">
			<table-row halign="center" padding-bottom="5">
				<font name="arial_10">
					<cell colspan="2" halign="center"><b>Cause No. </b><if cond="${Cause != null}"><u>${Cause}</u></if><else>_____________________</else></cell>
				</font>
			</table-row>
			<table-row>
				<cell>THE STATE OF TEXAS</cell>
				<cell>IN COUNTY CRIMINAL COURT</cell>
			</table-row>
			<table-row>
				<cell>VS.</cell>
				<cell>AT LAW NO. <if cond="${court != null}"><u>${court}</u></if><else>__________________</else></cell>
			</table-row>
			<table-row>
				<cell><u trim-body="true">${Name}</u></cell>
				<cell>HARRIS COUNTY, TEXAS</cell>
			</table-row>
			<table-row halign="center">
				<font name="arial">
					<cell colspan="2" halign="center">${versionNumber} ${versionType}</cell>
				</font>
			</table-row>
			<table-row halign="center">
				<font name="arial">
					<cell colspan="2" halign="center"><b>ORDER</b></cell>
				</font>
			</table-row>	
		</font>	
	</table>

	<paragraph halign="justified" line-spacing="1.25" spacing-before="10" spacing-after="10">
		<font name="arial_10">This court orders that the defendant comply with the following conditions of release on bond:	
		</font>	
	</paragraph>
	
	<table width="100" widths="5,7,92" padding-bottom="6">
		<font name="arial_10">
		_foreach_(eachCondition ${conditions} 'even' 'odd')
			<table-row>
				<cell halign="left" valign="top" ></cell>
				<cell colspan="2">${eachCondition.conditionName}</cell>
			</table-row>
			<if cond="${eachCondition.subConditions != null}">
				_foreach_(subCondition ${eachCondition.subConditions} 'even' 'odd')
					<table-row>
						<cell halign="left" valign="top" ></cell>
						<cell halign="left" valign="top" ></cell>
						<cell halign="left" valign="top" >${subCondition.subConditionName}</cell>
					</table-row>
				_endfor_
			</if>
		_endfor_
		</font>
	</table>
	
</document>