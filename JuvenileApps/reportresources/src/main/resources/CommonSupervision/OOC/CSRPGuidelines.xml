<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="50" margin-bottom="50">
<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="true"/>
<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="${orderTitle}"/>
<viewer-preferences page-mode="NoThumbs" zoom="1"/>

	<font-def name="times" family="Times" style="normal" size="12"/>
	<font-def name="times_10" family="Times" style="normal" size="10"/>

	<header>
		<header-part halign="left"  width="510">
			<table width="510" columns="2">
				<table-row halign="center">
					<font name="times">
						<cell colspan="2" halign="left"> ~${versionNumber} ${versionType}<space/><b>~ COMMUNITY SERVICE RESTITUTION PROGRAM (CSRP)</b></cell>
					</font>
				</table-row>
				<table-row padding-top="5" padding-bottom="10">
					<font name="times_10">
						<cell halign="left">
							~For: <if cond="${Name != null && Name != ""}"><u trim-body="true"> ~${Name}</u></if><else>_____________________</else>
						</cell>
						<cell halign="right">
							~Cause:  <if cond="${Cause != null && Cause != ""}"><u> ~${Cause}</u></if><else>_____________________</else>
						</cell>
					</font>
				</table-row>
			</table>				
		</header-part>
	</header>	
	
	<footer padding-top="10">
		<font name="times_10">
			<footer-part halign="left" width="100">
				<table columns="1" width="80" border-style="none">
					<cell no-wrap="true" padding="10">${comments}</cell>
				</table>		
			</footer-part>
		</font>
	</footer>
	
	<paragraph halign="center">
		<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
	</paragraph>
	
	<table columns="1" border-style="none" keep-together="true">
		<table-row halign="center">
			<font name="times">		
				<cell halign="center">${versionNumber} ${versionType}</cell>
			</font>
		</table-row>
		<table-row halign="center">
			<font name="times">
				<cell halign="center"><b>COMMUNITY SERVICE RESTITUTION PROGRAM (CSRP)</b></cell>
			</font>
		</table-row>
		<table-row halign="center">
			<font name="times">
				<cell halign="center"><b>PARTICIPANT GUIDELINES</b></cell>
			</font>
		</table-row>
	</table>		
		
	<paragraph halign="justified" line-spacing="1.25" spacing-before="10" spacing-after="10">
	<font name="times_10">I, <u trim-body="true">${Name}</u>, understand that I have been ordered by the Court to perform community service restitution.  The Harris County Community Supervision and Corrections Department's Community Service Restitution Program (CSRP) will assign me to an appropriate and approved work site to perform this service.  I further understand that neither HCCSCD nor any employee thereof is liable for any damages or injuries to or by myself while I am performing this service:
		<br>I agree to abide by the following CSRD Guidelines:</br>
	</font>	
	</paragraph>

	<paragraph halign="justified" line-spacing="1.25" spacing-after="10">
	<font name="times_10">I agree to abide by the following CSRD Guidelines:
	</font>	
	</paragraph>
	
	<table width="100" widths="3, 5,7,85" padding-bottom="6">
		<font name="times_10">
		_foreach_(eachCondition ${conditions} 'even' 'odd')
			<table-row>
				<cell></cell>
				<cell halign="left" valign="top" colspan="1">${eachCondition.conditionNumber}</cell>
				<cell colspan="2">${eachCondition.conditionName}</cell>
			</table-row>
			<if cond="${eachCondition.subConditions != null}">
				_foreach_(subCondition ${eachCondition.subConditions} 'even' 'odd')
					<table-row>
						<cell></cell>
						<cell halign="left" valign="top" colspan="1"></cell>
						<cell halign="left" valign="top" colspan="1">${subCondition.subConditionNumber}</cell>
						<cell halign="left" colspan="1">${subCondition.subConditionName}</cell>
					</table-row>
				_endfor_
			</if>
		_endfor_
		</font>
	</table>
	
	<table columns="3" border-style="none" widths="40, 20, 40" keep-together="true" line-spacing="1.5">
		<font name="times_10">
		<table-row>
			<cell colspan="3" padding-bottom="30">I have read and have had explained the CSRP Guidelines.  I understand and agree to fully abide by them.  I understand that failure to follow the above guidelines may result in this matter being brought to the attention of the Court through my Supervision Office.
			</cell>
		</table-row>
		<table-row halign="left" valign="middle">
			<cell halign="left">_________________________________________</cell>
			<cell halign="left">____________________</cell>
			<cell halign="left">_________________________________________</cell>
		</table-row>
		<table-row halign="left" valign="middle">
			<cell halign="left"><b>Defendant's Signature</b></cell>
			<cell halign="left"><b>Date</b></cell>
			<cell halign="left"><b>CSRP Referral Officer Signature</b></cell>
		</table-row>				
		</font>
	</table>		
				
</document>