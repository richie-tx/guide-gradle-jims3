<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="0" margin-bottom="50" height="100">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Referral Forms"/>
	<viewer-preferences page-mode="NoThumbs" zoom="1"/>

	<module>
		<font-def name="title" family="TIMES" style="bold" size="10"/>
		<font-def name="label" family="TIMES" style="bold" size="10"/>
		<font-def name="text" family="arial" style="normal|underline" size="10"/>
		<font-def name="times_8" family="TIMES" style="normal" size="8"/>
		
		<custom-tag alias="shr-title" tag="phrase">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="phrase">
			<attribute name="font" value="text"/>
		</custom-tag>
	</module>
	
	<header>
		<font name="title">
		<paragraph halign="center">
			<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
		</paragraph>
		</font>
	</header>
		
	<footer padding-top="10">
		<footer-part padding-top="15" halign="left" width="500">
		<table width="100" columns="2" widths="50,50">
		<table-row halign="left" padding-left="5" padding-right="5" padding-top="2" padding-bottom="0">
			<cell><font name="times_8">___________________________________________</font></cell>
			<cell><font name="times_8">___________________________________________</font></cell>
		</table-row>
		<table-row halign="left" padding-left="5" padding-right="5" padding-top="0" padding-bottom="5">
			<font name="times_8">
				<cell>Client Signature</cell>
				<cell>Referral Officer Signature</cell>
			</font>
		</table-row>
	</table>	
		</footer-part>
	</footer>
	
	<table columns="1" border-style="none" keep-together="true" padding="5" spacing-after="5">
		<table-row halign="center">
			<font name="title">
				<cell halign="center" padding-top="10" padding-bottom="5">TREATMENT ALTERNATIVES TO INCARCERATION PROGRAM RESIDENTIAL REFERRAL RECOMMENDATIONS</cell>
			</font>
		</table-row>
	</table>
	
	<table width="100" columns="3" widths="40,25,35"  padding="2" spacing-after="10">
		<table-row halign="left" valign="top">
			<cell>
				<shr-label>Referral Date:</shr-label><space/>
				<if cond="${referralDateAsStr!= null && referralDateAsStr!= ""}"><shr-text>${referralDateAsStr}</shr-text></if>
				<else><font name="times_8">__________________________________</font></else>
			</cell>
			<cell halign="right"><shr-label>Referral Officer:</shr-label></cell>
			<cell>
				<if cond="${referralOfficer!= null && referralOfficer!= ""}"><shr-text>${referralOfficer}</shr-text></if>
				<else><font name="times_8">____________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell>
				<shr-label>Client Name:</shr-label><space/>
				<if cond="${superviseeName!= null && superviseeName!= ""}"><shr-text>${superviseeName}</shr-text></if>
				<else><font name="times_8">____________________________________</font></else>
			</cell>
			<cell halign="right"><shr-label>SPN:</shr-label><space/></cell>
			<cell>
				<if cond="${superviseeId!= null && superviseeId!= ""}"><shr-text>${superviseeId}</shr-text></if>
				<else><font name="times_8">____________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell>
				<shr-label>CSO:</shr-label><space/>
				<if cond="${supervisionStaffName!= null && supervisionStaffName!= ""}"><shr-text>${supervisionStaffName}</shr-text></if>
				<else><font name="times_8">___________________________________________</font></else>
			</cell>
			<cell>
				<shr-label>POI:</shr-label><space/>
				<if cond="${staffPositionName!= null && staffPositionName!= ""}"><shr-text>${staffPositionName}</shr-text></if>
				<else><font name="times_8">________________</font></else>
			</cell>
			<cell>
				<shr-label>Region:</shr-label><space/>
				<if cond="${superviseeProgramUnit!= null && superviseeProgramUnit!= ""}"><shr-text>${superviseeProgramUnit}</shr-text></if>
				<else><font name="times_8">___________________________</font></else>
			</cell>
		</table-row>
	</table>	

	<table width="100" columns="2" widths="50,50" spacing-after="10">
		<table-row halign="left" padding-left="5" padding-right="5" padding-top="2">
			<cell border-style="left|top" border-width=".75"><shr-label trim-body="true">Intensive<space/></shr-label></cell>
			<cell border-style="right|top" border-width=".75"><shr-label trim-body="true"><space/></shr-label></cell>
		</table-row>
		<table-row halign="left" padding-left="5" padding-right="5" padding-bottom="10">
			<cell border-style="left|bottom" border-width=".75">
				<shr-label trim-body="true">Residential:<space/></shr-label>
				<if cond="${intensiveResidentialTime!= null && intensiveResidentialTime!= ""}"><shr-text>${intensiveResidentialTime}</shr-text></if>
				<else><font name="times_8">________________________________________</font></else>
			</cell>
			<cell border-style="right|bottom" border-width=".75">
				<shr-label trim-body="true">Residential:<space/></shr-label>
				<if cond="${residentialTime!= null && residentialTime!= ""}"><shr-text>${residentialTime}</shr-text></if>
				<else><font name="times_8">________________________________________</font></else>
			</cell>
		</table-row>
	</table>	
	
	<table width="100" columns="2" widths="55,45" padding="5" spacing-after="10">
		<table-row>
			<cell valign="top" colspan="2"> 
				<shr-label trim-body="true">Service Provider:<space/></shr-label>
				<if cond="${serviceProviderName!= null && serviceProviderName!= ""}"><shr-text>${serviceProviderName}</shr-text></if>
				<else><font name="times_8">_______________________________________________________________________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left">
			<cell valign="top">
				<shr-label trim-body="true">Address:<space/></shr-label>
				<if cond="${referralProgramLocation!= null && referralProgramLocation!= ""}"><shr-text>${referralProgramLocation}</shr-text></if>
				<else><font name="times_8">__________________________________________________________</font></else>
			</cell>
			<cell valign="top">
				<shr-label trim-body="true">Program Phone:<space/></shr-label>
				<if cond="${serviceProviderContactPhone!= null && serviceProviderContactPhone!= ""}"><shr-text>${serviceProviderContactPhone}</shr-text></if>
				<else><font name="times_8">_____________________________</font></else>
			</cell>
		</table-row>
		<table-row>
			<cell></cell>
			<cell>
				<shr-label trim-body="true">Program Fax:<space/></shr-label>
				<if cond="${referralProgramFax!= null && referralProgramFax!= ''}"><shr-text>${referralProgramFax}</shr-text></if>
				<else><font name="times_8">________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left">
			<cell halign="left"></cell>
			<cell>
				<shr-label>Contact:</shr-label><space/>
				<if cond="${serviceProviderContactName!= null && serviceProviderContactName!= ""}"><shr-text>${serviceProviderContactName}</shr-text></if>
				<else><font name="times_8">_____________________________________</font></else>
			</cell>
		</table-row>
	</table>	
	
	<table width="100" columns="1" padding-left="5" padding-right="5" padding-top="10" line-spacing="1.5">
		<table-row halign="left">
			<cell>
				<shr-label>Comments:</shr-label><space/><if cond="${referralReasonComments!= null && referralReasonComments!= ""}">
				<font name="text">${referralReasonComments}</font></if>
				<else><font name="times_8">__________________________________________________________________________________________________________________</font></else>
			</cell>
		</table-row>
	</table>	

</document>
