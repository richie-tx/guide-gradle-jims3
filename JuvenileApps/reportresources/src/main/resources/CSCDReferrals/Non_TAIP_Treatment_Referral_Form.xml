<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="0" margin-bottom="50" height="100">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Referral Forms"/>
	<viewer-preferences page-mode="NoThumbs" zoom="1"/>

	<module>
		<font-def name="title" family="TIMES" style="bold" size="12"/>
		<font-def name="times_10" family="TIMES" style="normal" size="12"/>
		<font-def name="label" family="TIMES" style="bold" size="10"/>
		<font-def name="text" family="arial" style="normal|underline" size="10"/>
		<font-def name="times_8" family="TIMES" style="normal" size="10"/>
		
		<custom-tag alias="shr-title" tag="phrase">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="phrase">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="ul" tag="list">
			<attribute name="body" value="${body}"/>
		</custom-tag>
		
		<custom-tag alias="ol" tag="ul">
			<attribute name="body" value="${body}"/>
			<attribute name="numbered" value="true"/>
		</custom-tag>
		 
		<custom-tag alias="li" tag="list-item">
			<attribute name="body" value="${body}"/>
		</custom-tag>
	</module>
	
	<header>
		<font name="title">
		<paragraph halign="center">
			<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
		</paragraph>
		</font>
	</header> 
	
	<footer padding-top="10">
		<footer-part padding-top="15" halign="left" width="500">
			<table width="100" columns="3" padding="1" widths="64,8,28">
				<table-row halign="justified" line-spacing="1.5">
					<cell valign="top" colspan="3"><font name="times_10"><b><i>Important - Please read carefully!!!</i></b><space/>This referral is <u>NOT A TAIP Client</u>.  This client has been referred to your agency for treatment through alternative funding sources.  A copy of his/her TAIP evaluation will be forwarded upon your request.  This case should be handled as are all other clients receiving treatment from alternative funding sources.  All communications should be forwarded to the Officer listed above and any changes in treatment must be staffed with this Officer prior to implementation.</font></cell>
				</table-row>
				<table-row halign="left">
					<cell height="60" valign="bottom"><shr-label>Referral Officer:_____________________________________________<space/></shr-label></cell>
					<cell height="25" valign="bottom"><shr-label trim-body="true">Phone:<space/></shr-label></cell>
					<cell height="25" valign="bottom">
						<if cond="${supervisionStaffPhone!= null && supervisionStaffPhone!= ""}"><shr-text>${supervisionStaffPhone}</shr-text></if>
						<else><font name="times_8">_______________________________</font></else>
					</cell>
				</table-row>
			</table>
		</footer-part>
	</footer>

	<table columns="1" width="100">
		<cell><space/></cell>
	</table>
	
	<table width="100" columns="1" border-style="none" keep-together="true">
		<table-row halign="center">
			<cell halign="center" padding-bottom="1"><shr-title>Treatment Referral</shr-title></cell>
		</table-row>	
		<table-row halign="center">
			<cell halign="center" padding-bottom="1"><shr-title><u>for NON-TAIP Clients</u></shr-title></cell>
		</table-row>	
		<table-row halign="center">
			<cell halign="center" padding-bottom="5"><shr-title>Through Department of State Health Services (DSHS) Funding</shr-title></cell>
		</table-row>
		<table-row halign="left">
			<cell>
				<shr-label>Referral Date:</shr-label><space/>
				<if cond="${referralDateAsStr!= null && referralDateAsStr!= ""}"><shr-text>${referralDateAsStr}</shr-text></if>
				<else><font name="times_8">_________________</font></else>
			</cell>
		</table-row>
		<table-row halign="center">
			<cell halign="center" valign="middle" height="30"><shr-title><u>THIS REFERRAL IS NOT A TAIP CLIENT</u></shr-title></cell>
		</table-row>	
	</table>
	
	<table width="100" columns="4" halign="left" widths="25,25,25,25">
		<table-row>
			<cell colspan="3" height="20" valign="bottom">
				<shr-label trim-body="true">Referral Officer:</shr-label><space/>
				<if cond="${referralOfficer!= null && referralOfficer!= ""}"><shr-text>${referralOfficer}</shr-text></if>
				<else><font name="times_8">____________________________________</font></else>
			</cell>
			<cell><shr-label trim-body="true">SPN:</shr-label><space/><shr-text>${superviseeId}</shr-text></cell>
		</table-row>
		<table-row>	
			<cell colspan="4" height="20">
				<shr-label>Client Name:</shr-label><space/>
				<if cond="${superviseeName!= null && superviseeName!= ""}"><shr-text>${superviseeName}</shr-text></if>
				<else><font name="times_8">__________________________________________</font></else>
			</cell>
		</table-row>
		<table-row>
			<cell colspan="4" height="20" valign="bottom">
				<shr-label trim-body="true">Pretrial/Community Supervision Officer:</shr-label><space/>
				<if cond="${supervisionStaffName!= null && supervisionStaffName!= ""}"><shr-text>${supervisionStaffName}</shr-text></if>
				<else><font name="times_8">________________________________________________</font></else>
			</cell>
		</table-row>
		<table-row>	
			<cell height="30" valign="middle">
				<shr-label>POI:</shr-label><space/>
				<if cond="${staffPositionName!= null && staffPositionName!= ""}"><shr-text>${staffPositionName}</shr-text></if>
				<else><font name="times_8">________________</font></else>
			</cell>
			<cell valign="middle">
				<shr-label trim-body="true">Phone:</shr-label><space/>
				<if cond="${supervisionStaffPhone!= null && supervisionStaffPhone!= ""}"><shr-text>${supervisionStaffPhone}</shr-text></if>
				<else><font name="times_8">__________________</font></else>
			</cell>		
			<cell valign="middle">
				<shr-label trim-body="true">Fax:<space/></shr-label>
				<if cond="${supervisionStaffFax!= null && supervisionStaffFax!= ""}"><font name="text">${supervisionStaffFax}</font></if>
				<else><font name="times_8">____________________</font></else>
			</cell>
			<cell valign="middle">
				<shr-label>Region:</shr-label><space/>
				<if cond="${superviseeProgramUnit!= null && superviseeProgramUnit!= ""}"><shr-text>${superviseeProgramUnit}</shr-text></if>
				<else><font name="times_8">___________________________</font></else>
			</cell>
		</table-row>
	</table>
	
	<table width="100" columns="2" widths="50,50" spacing-after="10">
		<table-row halign="left" padding-left="5" padding-right="5" padding-top="2">
			<cell border-style="left|top" border-width=".75"><shr-label trim-body="true">Intensive</shr-label></cell>
			<cell border-style="right|top" border-width=".75"><shr-label trim-body="true">Supportive</shr-label></cell>
		</table-row>
		<table-row halign="left" padding-left="5" padding-right="5">
			<cell border-style="left" border-width=".75">
				<shr-label trim-body="true">Outpatient:</shr-label><space/>
				<if cond="${intensiveOutpatientTime!= null && intensiveOutpatientTime!= ""}"><shr-text>${intensiveOutpatientTime}</shr-text></if>
				<else><font name="times_8">_______________________________________</font></else>
			</cell>
			<cell border-style="right" border-width=".75">
				<shr-label trim-body="true">Outpatient:</shr-label><space/>
				<if cond="${supportiveOutpatientTime!= null && supportiveOutpatientTime!= ""}"><shr-text>${supportiveOutpatientTime}</shr-text></if>
				<else><font name="times_8">_______________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" padding-left="5" padding-right="5">
			<cell border-style="left" border-width=".75"><shr-label trim-body="true">Intensive</shr-label></cell>
			<cell border-style="right" border-width=".75"><shr-label trim-body="true"></shr-label></cell>
		</table-row>
		<table-row halign="left" padding-left="5" padding-right="5" padding-bottom="10">
			<cell border-style="left|bottom" border-width=".75">
				<shr-label trim-body="true">Residential:</shr-label><space/>
				<if cond="${intensiveResidentialTime!= null && intensiveResidentialTime!= ""}"><shr-text>${intensiveResidentialTime}</shr-text></if>
				<else><font name="times_8">_______________________________________</font></else>
			</cell>
			<cell border-style="right|bottom" border-width=".75">
				<shr-label trim-body="true">Residential:</shr-label><space/>
				<if cond="${residentialTime!= null && residentialTime!= ""}"><shr-text>${residentialTime}</shr-text></if>
				<else><font name="times_8">_______________________________________</font></else>
			</cell>
		</table-row>
		<table-row>	
			<cell colspan="2" height="25" valign="middle">
				<shr-label trim-body="true">AGENCY REFERRED TO:</shr-label><space/>
				<if cond="${serviceProviderName!= null && serviceProviderName!= ""}"><shr-text>${ServiceProviderName}</shr-text></if>
				<else><font name="times_8">______________________________________________________________________________</font></else>
			</cell>
		</table-row>
		<table-row>
			<cell height="15" valign="bottom">
				<shr-label trim-body="true">Address:</shr-label><space/>
				<if cond="${referralProgramLocation!= null && referralProgramLocation!= ""}"><shr-text>${referralProgramLocation}</shr-text></if>
				<else><font name="times_8">___________________________________________</font></else>
			</cell>
			<cell height="15" valign="bottom">
				<shr-label trim-body="true">Phone:</shr-label><space/>
				<if cond="${serviceProviderContactPhone!= null && serviceProviderContactPhone!= ""}"><shr-text>${serviceProviderContactPhone}</shr-text></if>
				<else><font name="times_8">_____________________________________________</font></else>	
			</cell>
		</table-row>
		<table-row>
			<cell></cell>
			<cell>
				<shr-label trim-body="true">Program Fax:<space/></shr-label>
				<if cond="${referralProgramFax!= null && referralProgramFax!= ''}"><shr-text>${referralProgramFax}</shr-text></if>
				<else><font name="times_8">_________________________________________</font></else>			
			</cell>
		</table-row>
		<table-row>
			<cell></cell>
			<cell height="15" valign="bottom">
				<shr-label trim-body="true">Contact:</shr-label><space/>
				<if cond="${serviceProviderContactName!= null && serviceProviderContactName!= ""}"><shr-text>${serviceProviderContactName}</shr-text></if>
				<else><font name="times_8">___________________________________________</font></else>
			</cell>
		</table-row>
	</table>

	<table width="100" columns="1" padding-left="5" padding-right="5" padding-top="10" line-spacing="1.5">
		<table-row halign="left">
			<cell>
				<shr-label>Comments:</shr-label><space/>
				<if cond="${referralReasonComments!= null && referralReasonComments!= ""}"><font name="text">${referralReasonComments}</font></if>
				<else><font name="times_8">___________________________________________________________________________________________</font></else>
			</cell>
		</table-row>
	</table>	
	
</document>