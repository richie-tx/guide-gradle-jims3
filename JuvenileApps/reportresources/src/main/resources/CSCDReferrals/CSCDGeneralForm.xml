<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="0" margin-bottom="50" height="100">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Referral Forms"/>
	<viewer-preferences page-mode="UseThumbs"/>

	<module>
		<font-def name="title" family="arial" style="bold" size="14"/>
		<font-def name="header" family="arial" style="bold" size="10"/>
		<font-def name="label" family="arial" style="bold" size="10"/>
		<font-def name="text" family="arial" style="normal|underline" size="8"/>
		<font-def name="text-large" family="Helvetica" style="normal" size="12"/>
		<font-def name="tableheader" family="Helvetica" style="bold|underline" size="10"/>
		<font-def name="columnheader" family="Helvetica" style="bold|underline" size="10"/>
		<font-def name="helvetica" family="Helvetica" style="normal" size="12"/>
		<font-def name="geneva" family="georgia" style="normal" size="12"/>
		<font-def name="arial_8" family="arial" style="normal" size="8"/>
		
		<custom-tag alias="shr-title" tag="phrase">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-header" tag="phrase">
			<attribute name="font" value="header"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="paragraph">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="shr-tableheader" tag="phrase">
			<attribute name="font" value="tableheader"/>
		</custom-tag>
		
		<custom-tag alias="column-header" tag="paragraph">
			<attribute name="font" value="columnheader"/>
		</custom-tag>
		
		<custom-tag alias="ul" tag="list">
			<attribute name="body" value="${body}"/>
		</custom-tag>
		
		<custom-tag alias="ol" tag="ul">
			<attribute name="body" value="${body}"/>
			<attribute name="numbered" value="true"/>
		</custom-tag>
		 
		<custom-tag alias="li" tag="list-item">
			<attribute name="body" value="${body}"/>
		</custom-tag>
	</module>
	
	<header>
		<font name="title">
		<paragraph halign="center">
			<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
		</paragraph>
		</font>
	</header>	
	
	<table columns="1" border-style="none" keep-together="true">
		<table-row halign="center">
			<font name="title">
				<cell halign="center" padding-bottom="10">CSCD - General Referral Form</cell>
			</font>
		</table-row>
	</table>
	
	<table width="100" columns="1" halign="left" spacing-after="10">
		<cell>
			<shr-header>CLIENT INFORMATION</shr-header><br/>
		</cell>
	</table>
	
	<table width="100" columns="3" padding="2">
		<table-row halign="left">
			<cell><shr-label>Name of Client:</shr-label></cell>
			<cell><shr-label>Client Phone:</shr-label></cell>
			<cell><shr-label>Date of Birth:</shr-label></cell>
		</table-row>
		<table-row halign="left">
			<cell><shr-text>${superviseeName}</shr-text></cell>
			<cell><shr-text>${superviseePhone}</shr-text></cell>
			<cell><shr-text>${superviseeDOB}</shr-text></cell>
		</table-row>
	</table>	
	
	<br/>
		
	<table width="100" columns="3" halign="left" spacing-after="10">
		<cell><shr-label trim-body="true">Court:<space/></shr-label><u>${court}</u></cell>
		<cell><shr-label trim-body="true">SPN:<space/></shr-label><u>${superviseeId}</u></cell>
		<cell><shr-label trim-body="true">Current Offense:<space/></shr-label><u>${currentOffense}</u></cell>
	</table>	
	
	<br/>
	
	<table width="100" columns="1" halign="left" spacing-after="10">
		<cell>
			<shr-header>Referring Source:</shr-header><br/>
		</cell>
	</table>
	
	<table width="100" columns="4" padding="3">
		<table-row halign="left">
			<cell><shr-label></shr-label></cell>
			<cell><shr-label>POI</shr-label></cell>
			<cell><shr-label>Date</shr-label></cell>
			<cell><shr-label>Region</shr-label></cell>
		</table-row>
		<table-row halign="left">
			<cell><shr-label trim-body="true">Officer Name:<space/></shr-label><u>${officerName}</u></cell>
			<cell><shr-text>${poi}</shr-text></cell>
			<cell><shr-text>${referralDate}</shr-text></cell>
			<cell><shr-text>${superviseeProgramUnit}</shr-text></cell>
		</table-row>
	</table>	
	
	<br/>
	
	<table width="100" columns="2" padding="0">
		<table-row halign="left">
			<cell><shr-label trim-body="true">Contact Information: Phone<space/></shr-label><u>${supervisionStaffPhone}</u></cell>
			<cell><shr-label trim-body="true">Email Address<space/></shr-label><u>${superviseeStaffEmail}</u></cell>
		</table-row>
	</table>	
	
	<br/><br/>
	
	<table width="100" columns="2" padding="0">
		<table-row halign="left">
			<cell valign="top"><shr-label trim-body="true">Program Name:<space/></shr-label><u>${programName}</u></cell>
			<cell valign="top"><shr-label trim-body="true">Referral Type:<space/></shr-label><u>${referralType}</u></cell>
		</table-row>
		<table-row halign="left">
			<cell valign="top"><shr-label trim-body="true">Program Location:<space/></shr-label><u>${programLocation}</u></cell>
			<cell valign="top"><shr-label trim-body="true">Program Phone:<space/></shr-label><u>${programPhone}</u></cell>
		</table-row>
		<table-row halign="left">
			<cell valign="top"></cell>
			<cell valign="top"><shr-label trim-body="true">Enrollment Number:<space/></shr-label><u>${enrollmentNumber}</u></cell>
		</table-row>
	</table>	
	
	<br/><br/>
	
	<table columns="1" width="100">
			<cell><b>_________________________________________________________________________________________________</b></cell>
	</table>
	
	<table width="100" columns="1" padding="1">
		<table-row halign="left">
			<cell><shr-label>Client has been referred to your agency for the following reason(s): </shr-label></cell>
		</table-row>
		<table-row halign="left">
			<cell><u>${referralReasonComments}</u></cell>
		</table-row>
	</table>	

</document>
