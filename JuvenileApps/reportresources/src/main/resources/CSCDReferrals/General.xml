<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="50" margin-top="0" margin-bottom="50" height="100">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Referral Forms"/>
	<viewer-preferences page-mode="NoThumbs" zoom="1"/>
	
	<module>
		<font-def name="title" family="arial" style="bold" size="14"/>
		<font-def name="header" family="arial" style="normal" size="10"/>
		<font-def name="label" family="arial" style="bold" size="8"/>
		<font-def name="text" family="arial" style="normal|underline" size="8"/>
		<font-def name="arial_8" family="arial" style="normal" size="8"/>
		<font-def name="times_8" family="Times" style="normal" size="8"/>
		<font-def name="times_8b" family="Times" style="bold" size="8"/>
		
		<custom-tag alias="shr-title" tag="phrase">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-header" tag="phrase">
			<attribute name="font" value="header"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="phrase">
			<attribute name="font" value="text"/>
		</custom-tag>
	</module>
	
	<header>
		<font name="title">
		<paragraph halign="center">
			<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
		</paragraph>
		</font>
	</header>	
	
	<footer padding-top="10">
		<footer-part padding-top="15" halign="left" width="500">
			<table columns="4" border-style="none" widths="40, 10, 40, 10" keep-together="false" line-spacing="1.5">
				<table-row>
					<cell colspan="4">
						<font name="arial_8">
							Please forward reports to the address and/or fax listed above.
						</font>
					</cell>
				</table-row>
				<table-row><cell colspan="4"><font name="text"> </font></cell></table-row>
				<table-row><cell colspan="4"><font name="text"> </font></cell></table-row>
				<table-row>
					<cell colspan="4">
						<font name="arial_8"><b>
							I authorize HCCSCD and its staff to furnish this information to an agency specified as part of my Conditions of Community Supervision and any other agency that may be deemed appropriate to provide services during the term of my supervision.
						</b></font>
					</cell>
				</table-row>
				<table-row halign="left" valign="middle" padding-top="30">
					<cell halign="left">____________________________________</cell>
					<cell halign="left">_________</cell>
					<cell halign="left">____________________________________</cell>
					<cell halign="left">_________</cell>
				</table-row>
				<table-row halign="left" valign="middle">
					<cell halign="left"><font name="header">Signature</font> </cell>
					<cell halign="left"><font name="header">Date</font></cell>
					<cell halign="left"><font name="header">Witness Signature</font></cell>
					<cell halign="left"><font name="header">Date</font></cell>
				</table-row>				
			</table>	
		</footer-part>
	</footer>
	
	<table width="100" columns="3" widths="60,19,21"  padding="2" spacing-after="5">
		<table-row halign="center">
			<cell colspan="3" halign="center" padding-top="10" padding-bottom="5"><shr-title>General Referral Form</shr-title></cell>
		</table-row>
		<table-row halign="left">
			<cell></cell>
			<cell></cell>
			<cell><font name="arial_8"><b>Date:\t</b></font>
				<if cond="${referralDateAsStr!= null && referralDateAsStr!= ""}"><shr-text>${referralDateAsStr}</shr-text></if>
				<else><font name="arial_8">_________</font></else>
			</cell>
		</table-row>
		<table-row halign="left">
			<cell><shr-label><b>CLIENT INFORMATION</b></shr-label></cell>
			<cell></cell>
			<cell></cell>
		</table-row>
		<table-row halign="left">
			<cell><shr-label>Name of Client:</shr-label></cell>
			<cell><shr-label>Client Phone:</shr-label></cell>
			<cell><shr-label>Date of Birth:</shr-label></cell>
		</table-row>
		<table-row padding-top="5" halign="left">
			<cell>
				<if cond="${superviseeName!= null && superviseeName!= ""}"><shr-text>${superviseeName}</shr-text></if>
				<else><font name="times_8">____________________________________________</font></else>
			</cell>
			<cell>
				<if cond="${superviseePhone!= null && superviseePhone!= ""}"><shr-text>${superviseePhone}</shr-text></if>
				<else><font name="times_8">______________</font></else>
			</cell>
			<cell>
				<if cond="${superviseeDOB!= null && superviseeDOB!= ""}"><shr-text>${superviseeDOB}</shr-text></if>
				<else><font name="times_8">______________</font></else>
			</cell>
		</table-row>
	</table>	
		
	<table width="100" columns="4" widths="1,10,15,74" halign="left" padding="2" spacing-after="10">
		<cell></cell>
		<cell>
			<shr-label trim-body="true">Court:<space/></shr-label>
			<if cond="${court!= null && court!= ""}"><shr-text>${court}</shr-text></if>
			<else><font name="times_8">_____</font></else>
		</cell>
		<cell>
			<shr-label trim-body="true">SPN:<space/></shr-label>
			<if cond="${superviseeId!= null && superviseeId!= ""}"><shr-text>${superviseeId}</shr-text></if>
			<else><font name="times_8">_____________</font></else>
		</cell>
		<cell>
			<shr-label trim-body="true">Current Offense:<space/></shr-label>
			<if cond="${currentOffense!= null && currentOffense!= ""}"><shr-text>${currentOffense}</shr-text></if>
			<else><font name="times_8">__________________________________________________________________</font></else>
		</cell>
	</table>	
	
	<table width="100" columns="3" widths="39,26,35" spacing-after="10" line-spacing="1.5">
		<table-row>
			<cell colspan="3" border-style="top" border-width="1"><shr-label>Referring Source:</shr-label></cell>
		</table-row>
		<table-row halign="left">
			<cell><shr-label></shr-label></cell>
			<cell><shr-label>POI</shr-label></cell>
			<cell><shr-label>Region</shr-label></cell>
		</table-row>
		<table-row halign="left" valign="bottom">
			<cell>
				<shr-header trim-body="true">Officer Name:<space/></shr-header>
				<font name="text"><if cond="${supervisionStaffName!= null && supervisionStaffName!= ""}">${supervisionStaffName}</if>
				<else><font name="times_8">______________________________</font></else>
				</font>
			</cell>
			<cell padding-right="3">
				<if cond="${staffPositionName!= null && staffPositionName!= ""}"><font name="text">${staffPositionName}</font></if>
				<else><font name="times_8">_______________</font></else>
			</cell>
			<cell>
				<if cond="${superviseeProgramUnit!= null && superviseeProgramUnit!= ""}"><font name="text">${superviseeProgramUnit}</font></if>
				<else><font name="times_8">_____________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell></cell>
			<cell></cell>
			<cell>
				<if cond="${programUnitAddress!= null && programUnitAddress!= ""}"><font name="text">${programUnitAddress}</font></if>
				<else><font name="times_8">_____________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell>
				<shr-label trim-body="true">Contact Information:\tPhone:<space/></shr-label>
				<if cond="${supervisionStaffPhone!= null && supervisionStaffPhone!= ""}"><font name="text">${supervisionStaffPhone}</font></if>
				<else><font name="times_8">______________</font></else>
			</cell>
			<cell>
				<shr-label trim-body="true">Fax:<space/></shr-label>
				<if cond="${supervisionStaffFax!= null && supervisionStaffFax!= ""}"><font name="text">${supervisionStaffFax}</font></if>
				<else><font name="times_8">______________________</font></else>
			</cell>
			<cell>
				<shr-label trim-body="true">Email Address:<space/></shr-label>
				<if cond="${superviseeStaffEmail!= null && superviseeStaffEmail!= ""}"><font name="text">${superviseeStaffEmail}</font></if>
				<else><font name="times_8">______________________________</font></else>
			</cell>
		</table-row>
	</table>
	
	<table width="100" columns="2" widths="55,45" padding="0" line-spacing="1.5">
		<table-row halign="left">
			<cell colspan="2" border-style="top" border-width="1.25" valign="bottom">
				<shr-label trim-body="true">Service Provider:<space/></shr-label>
				<if cond="${serviceProviderName!= null && serviceProviderName!= ""}"><shr-text>${serviceProviderName}</shr-text></if>
				<else><font name="times_8">_______________________________________________________________________________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell>
				<shr-label trim-body="true">Address:<space/></shr-label>
				<if cond="${serviceProviderLocation!= null && serviceProviderLocation!= ""}"><shr-text>${serviceProviderLocation}</shr-text></if>
				<else><font name="times_8">___________________________________________________________</font></else>
			</cell>
			<cell>
				<shr-label trim-body="true">Phone:<space/></shr-label>
				<if cond="${serviceProviderPhone!= null && serviceProviderPhone!= ""}"><shr-text>${serviceProviderPhone}</shr-text></if>
				<else><font name="times_8">__________________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell valign="top"></cell>
			<cell valign="top"><shr-label trim-body="true">Contact:<space/></shr-label>
				<if cond="${serviceProviderContactName!= null && serviceProviderContactName!= ""}"><font name="text">${serviceProviderContactName}</font></if>
				<else><font name="times_8">_________________________________________________</font></else>
			</cell>
		</table-row>
	</table>
	
	<table width="100" columns="2" widths="55,45" padding-top="10" line-spacing="1.5">
		<table-row halign="left" valign="top">
			<cell>
				<shr-label trim-body="true">Program Name:<space/></shr-label>
				<if cond="${programName!= null && programName!= ""}"><shr-text>${programName}</shr-text></if>
				<else><font name="times_8">_____________________________________________________</font></else>
			</cell>
			<cell>
				<shr-label trim-body="true">Referral Type:<space/></shr-label>
				<if cond="${referralType!= null && referralType!= ""}"><shr-text>${referralType}</shr-text></if>
				<else><font name="times_8">___________________________________________</font></else>
			</cell>
		</table-row>
		<table-row halign="left" valign="top">
			<cell>
				<shr-label trim-body="true">Program Location:<space/></shr-label>
				<if cond="${referralProgramLocation!= null && referralProgramLocation!= ""}"><shr-text>${referralProgramLocation}</shr-text></if>
				<else><font name="times_8">__________________________________________________</font></else>
			</cell>
			<cell>
				<shr-label trim-body="true">Program Phone:<space/></shr-label>
				<if cond="${referralProgramPhone!= null && referralProgramPhone!= ''}"><shr-text>${referralProgramPhone}</shr-text></if>
				<else><font name="times_8">_________________________________________</font></else>
			</cell>
		</table-row>
		<table-row>
			<cell></cell>
			<cell>
				<shr-label trim-body="true">Program Fax:<space/></shr-label>
				<if cond="${referralProgramFax!= null && referralProgramFax!= ''}"><shr-text>${referralProgramFax}</shr-text></if>
				<else><font name="times_8">_________________________________________</font></else>			
			</cell>
		</table-row>
	</table>	
	
	<paragraph halign="justified" spacing-before="5" line-spacing="1.5">
        <font name="times_8">
        	<shr-label trim-body="true">Client has been referred to your agency for the following reason(s): <br/></shr-label>
        	<if cond="${referralReasonComments!= null && referralReasonComments!= ""}"><shr-text>${referralReasonComments}</shr-text></if>
			<else><font name="times_8">__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________</font></else>
    	</font>
    </paragraph> 	

</document>