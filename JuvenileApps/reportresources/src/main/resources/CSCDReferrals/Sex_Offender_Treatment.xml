<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="50" margin-right="30" margin-top="0" margin-bottom="50" height="100">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Referral Forms"/>
	<viewer-preferences page-mode="NoThumbs" zoom="1"/>

	<module>
		<font-def name="title" family="Times" style="bold" size="14"/>
		<font-def name="header" family="Times" style="normal" size="10"/>
		<font-def name="label" family="Times" style="normal" size="10"/>
		<font-def name="text" family="arial" style="normal|underline" size="10"/>
		<font-def name="arial_8b" family="arial" style="bold" size="8"/>
		
		<custom-tag alias="shr-title" tag="phrase">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-header" tag="phrase">
			<attribute name="font" value="header"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="phrase">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="ul" tag="list">
			<attribute name="body" value="${body}"/>
		</custom-tag>
		
		<custom-tag alias="ol" tag="ul">
			<attribute name="body" value="${body}"/>
			<attribute name="numbered" value="true"/>
		</custom-tag>
		 
		<custom-tag alias="li" tag="list-item">
			<attribute name="body" value="${body}"/>
		</custom-tag>
	</module>
	
	<header>
		<font name="title">
		<paragraph halign="center">
			<image source="images/CSCDCounty.jpg" width="510" height="85" scale-to-fit="false"/>
		</paragraph>
		</font>
	</header>	
	
	<footer padding-top="10">
		<footer-part padding-top="15" halign="left" width="500">
			<table columns="1" border-style="none">
				<table-row>
					<cell valign="top" padding-top="15" halign="left">
						<font name="arial_8b">Please forward reports to the address and/or fax listed above.  Thank you</font>
					</cell>
				</table-row>
	     	</table>
		</footer-part>
		
		
	</footer>
	
	<table columns="1" border-style="none" keep-together="true" spacing-after="5">
		<table-row halign="center">
			<cell halign="center" padding-top="20" padding-bottom="5"><shr-title>Sex Offender Treatment Referral Form</shr-title></cell>
		</table-row>
	</table>
	
	<table width="100" columns="3" widths="50,23,27"  padding="2" spacing-after="5">
		<table-row padding-top="2"  padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell valign="middle">
				<shr-label>To (Provider):<space/></shr-label><if cond="${serviceProviderName!= null && serviceProviderName!= ""}"><shr-text>${serviceProviderName}</shr-text></if>
				<else><shr-label>____________________________</shr-label></else>
			</cell>
			<cell valign="middle" border-style="left|right|top" border-width=".75">
				<shr-label>Phone:<space/></shr-label><if cond="${serviceProviderPhone!= null && serviceProviderPhone!= ""}"><shr-text>${serviceProviderPhone}</shr-text></if>
				<else><shr-label>______________</shr-label></else>
			</cell>
			<cell valign="top" line-spacing="1.5">
				<shr-label>Fax Date:<space/></shr-label><if cond="${spFaxDate!= null && spFaxDate!= ""}"><shr-text>${spFaxDate}</shr-text></if>
				<else><shr-label>____________________ </shr-label></else><br/>  
				<shr-label>Fax #:<space/></shr-label><if cond="${spFax!= null && spFax!= ""}"><shr-text>${spFax}</shr-text></if>
				<else><shr-label>_______________________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell colspan="2" valign="top">
				<shr-label>Referred By:<space/></shr-label><if cond="${supervisionStaffName!= null && supervisionStaffName!= ""}"><shr-text>${supervisionStaffName}</shr-text></if>
				<else><shr-label>____________________________________________</shr-label></else>
			</cell>
			<cell valign="top" border-style="left|top" border-width=".75">
				<shr-label>Phone:<space/></shr-label><if cond="${supervisionStaffPhone!= null && supervisionStaffPhone!= ""}"><shr-text>${supervisionStaffPhone}</shr-text></if>
				<else><shr-label>______________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell colspan="2" valign="top">
				<shr-label>Defendat's Name:<space/></shr-label><if cond="${superviseeName!= null && superviseeName!= ""}"><shr-text>${superviseeName}</shr-text></if>
				<else><shr-label>____________________________________________</shr-label></else>
			</cell>
			<cell valign="top" border-style="left|top" border-width=".75">
				<shr-label>Home Phone #:<space/></shr-label><if cond="${superviseePhone!= null && superviseePhone!= ""}"><shr-text>${superviseePhone}</shr-text></if>
				<else><shr-label>________________</shr-label></else>  
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell colspan="2" valign="top">
				<shr-label>SPN:<space/></shr-label><if cond="${superviseeId!= null && superviseeId!= ""}"><shr-text>${superviseeId}</shr-text></if>
				<else><shr-label>____________________________________________</shr-label></else>
			</cell>
			<cell valign="top" border-style="left" border-width=".75">
				<shr-label>Work/Other #:<space/></shr-label><if cond="${superviseeEmployPhone!= null && superviseeEmployPhone!= ""}"><shr-text>${superviseeEmployPhone}</shr-text></if>
				<else><shr-label>________________</shr-label></else> 
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell colspan="2" valign="top">
				<shr-label>Offense:<space/></shr-label><if cond="${currentOffense!= null && currentOffense!= ""}"><shr-text>${currentOffense}</shr-text></if>
				<else><shr-label>____________________________________________</shr-label></else>
			</cell>
			<cell valign="top" border-style="left|top" border-width=".75">
				<shr-label>Court:<space/></shr-label><if cond="${court!= ""}"><shr-text>${court}</shr-text></if>
				<else><shr-label>________________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell valign="top">
				<shr-label><b>Contract Services Tracer #:</b><space/></shr-label><if cond="${contractTracerNumber!= null && contractTracerNumber!= ""}"><shr-text>${contractTracerNumber}</shr-text></if>
				<else><shr-label>___________</shr-label></else>
			</cell>
			<cell valign="top">
				<if cond="${selfPay!= null && selfPay== "1"}"><shr-text>(X)</shr-text><space/></if>
				<else><shr-label>____</shr-label><space/></else>
				<shr-label>Check here if self-pay</shr-label>
			</cell>
			<cell valign="top" border-style="left" border-width=".75">
				<shr-label>Cause #: </shr-label><if cond="${cause!= null && cause!= ""}"><shr-text>${cause}</shr-text></if>
				<else><shr-label>________________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="5" halign="left" border-style="top" border-width=".75">
			<cell colspan="3" valign="top">
				<shr-label>Treatment Provider Name:<space/></shr-label><if cond="${serviceProviderName!= null && serviceProviderName!= ""}"><shr-text>${serviceProviderName}</shr-text></if>
				<else><shr-label>________________________________________________________________________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2" padding-bottom="10">
			<cell colspan="3" valign="top">
				<shr-label>\t\t Polygraph Examiner:<space/></shr-label><if cond="${polygrphExaminerName!= null && polygrphExaminerName!= ""}"><shr-text>${polygrphExaminerName}</shr-text></if>
				<else><shr-label>____________________________________________</shr-label></else>
			</cell>
		</table-row>
		<table-row  padding-left="80" padding-top="2" padding-bottom="0">
			<cell colspan="3" valign="top">
				<shr-label>Phone #:<space/></shr-label><if cond="${polygrphExaminerPhone!= null && polygrphExaminerPhone!= ""}"><shr-text>${polygrphExaminerPhone}</shr-text></if>
				<else><shr-label>__________________</shr-label></else>
				\t\t\t<shr-label>Fax #:<space/></shr-label><if cond="${polygrphExaminerFax!= null && polygrphExaminerFax!= ""}"><shr-text>${polygrphExaminerFax}</shr-text></if>
				<else><shr-label>__________________</shr-label></else>
			</cell>
		</table-row>
	</table>
	
	<table width="100" columns="3" widths="33,40,27"  padding="2" spacing-after="5" spacing-before="5">
		<table-row padding-top="2"  padding-bottom="10" halign="left" border-style="top" border-width=".75">
			<cell colspan="2" valign="middle" border-style="right|top" border-width=".75" line-spacing="1.5">
				<shr-label>Community Supervision Officer:<space/></shr-label><if cond="${supervisionStaffName!= null && supervisionStaffName!= ""}"><shr-text>${supervisionStaffName}</shr-text></if>
				<else><shr-label>____________________________</shr-label></else><br/>
				<shr-label>Phone:<space/></shr-label><if cond="${supervisionStaffPhone!= null && supervisionStaffPhone!= ""}"><shr-text>${supervisionStaffPhone}</shr-text></if>
				<else><shr-label>______________</shr-label></else>
			</cell>
			<cell valign="top" line-spacing="1.5">
				<shr-label>Fax:<space/></shr-label><if cond="${supervisionStaffFax!= null && supervisionStaffFax!= ""}"><shr-text>${supervisionStaffFax}</shr-text></if>
				<else><shr-label>_________________</shr-label></else><br/>  
				<shr-label>Address:<space/></shr-label><if cond="${programUnitAddress!= ""}"><shr-text>${programUnitAddress}</shr-text></if>
				<else><shr-label>______________</shr-label></else>
			</cell>
		</table-row>
		<table-row padding-top="2"  padding-bottom="5" halign="left" border-style="top" border-width=".75">
			<cell colspan="3" valign="middle">
				<shr-label>The Defendant is referred for one of the following: (check one):</shr-label>
			</cell>
		</table-row>
		<table-row padding-top="2"  padding-bottom="5" halign="left">
			<cell><shr-label><if cond="${polygrphExamType!= null && polygrphExamType== "46"}"><shr-text>(X)</shr-text> RSOTP Evaluation</if><else>____ RSOTP Evaluation</else></shr-label></cell>
			<cell><shr-label><if cond="${polygrphExamType!= null && polygrphExamType== "47"}"><shr-text>(X)</shr-text><space/>Sex Offender Individual</if><else>____ Sex Offender Individual</else></shr-label></cell>
			<cell></cell>
		</table-row>
		<table-row padding-top="2"  padding-bottom="10" halign="left">
			<cell><shr-label><if cond="${polygrphExamType!= null && polygrphExamType== "48"}"><shr-text>(X)</shr-text> Sex Offender Group Therapy</if><else>____ Sex Offender Group Therapy</else></shr-label></cell>
			<cell colspan="2"><shr-label><if cond="${polygrphExamType!= null && polygrphExamType== "49"}"><shr-text>(X)</shr-text><space/>Other <shr-text>${sexOffenRefOtherReasDesc}</shr-text></if><else>____ Other</else></shr-label></cell>
		</table-row>
		<table-row padding-top="5"  padding-bottom="2" halign="center" border-style="top" border-width=".75">
			<cell colspan="3" valign="middle">
				<shr-label><b>*Any special areas/issues of concern: Instant Offense Details; Rule Violations; Indicate Prior test dates; Tester and</b></shr-label>
			</cell>
		</table-row>
		<table-row padding-top="2"  padding-bottom="5" halign="center">
			<cell colspan="3" valign="middle">
				<shr-label><b>type of exam,etc.</b></shr-label>
			</cell>
		</table-row>
		<table-row padding-top="15"  padding-bottom="5" halign="justified" line-spacing="1.5">
			<cell colspan="3" valign="middle">
				<shr-label>
        	<if cond="${sexOffenRefReason!= ""}"><shr-text>${sexOffenRefReason}</shr-text></if>
			<else><shr-label>________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________</shr-label></else>
    	</shr-label>
			</cell>
		</table-row>
	</table>

</document>