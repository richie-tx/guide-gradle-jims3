<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="25" margin-right="25" margin-top="5" margin-bottom="25">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Cancellation Call List"/>

	<module>
		<font-def name="title" family="Helvetica" style="bold" size="12"/>
		<font-def name="header" family="Helvetica" style="bold|underline" size="12"/>
		<font-def name="label" family="Helvetica" style="bold" size="11"/>
		<font-def name="text" family="Helvetica" style="normal" size="10"/>
		<font-def name="text-large" family="Helvetica" style="normal" size="12"/>
		<font-def name="text-small" family="Helvetica" style="normal" size="8"/>
		<font-def name="text-italic" family="Helvetica" style="bold|italic" size="11"/>
		<font-def name="letterheader" family="Helvetica" style="bold" size="12"/>
		
		<custom-tag alias="std-title" tag="paragraph">
			<attribute name="font" value="text-italic"/>
		</custom-tag>
		
		<custom-tag alias="letterheader" tag="paragraph">
			<attribute name="font" value="letterheader"/>
		</custom-tag>
	</module>

    <new-page size="LETTER" margin-left="25" margin-right="25" margin-top="5" margin-bottom="25">
    </new-page>
	
	<table columns="2" border-style="none" border-width="0" widths="15,85" padding="0" spacing-after="30" >
		<table-row halign="left">
	        <cell halign="left" valign="top" >
	            <paragraph>
	                <image source="MJCW/HarrisCountySeal.jpg" width="75" height="75" scale-to-fit="true"/>
	            </paragraph>
	        </cell>
	        <cell halign="left" valign="top">
	        	<table columns="2" padding="3" border-width="0" >
	        		<table-row>
				        <cell colspan= "2" halign="left" border-style="bottom" border-width="2" border-color="gray" padding-bottom="5">
							<letterheader>
								HARRIS COUNTY<br/>
								JUVENILE PROBATION DEPARTMENT
							</letterheader> 	
						</cell>
				    </table-row>	

    	        	<table-row>
    	        	   <cell halign="left" valign="top" >
						  _if_( ${locationUnitName} notEmpty )
						  	<paragraph font="text">
						  		<b>${locationUnitName}</b>
						  	</paragraph>
						  _endif_
						  
						   	<paragraph font="text">
						  		${locationUnitAddress.streetAddress}<br/>
								${locationUnitAddress.cityStateZip}
						  	</paragraph>
						 
      				</cell>				
      				<cell halign="right" valign="top">
						<paragraph halign="right" font="text-small">
							<b>${managerFirstName} ${managerLastName}</b> <br/>
							Administrator<br/>
							Office ${managerPhone}
						</paragraph>	
				    </cell>		  	
		 		  </table-row>
            	</table>    
	        </cell>
		</table-row>        
	</table>
	
	<paragraph font="text" spacing-after="40">
		${guardianFirstName} ${guardianMiddleName} ${guardianLastName}<br/>
		${guardianAddress.streetAddress}<br/>
		${guardianAddress.cityStateZip}
	</paragraph>   
	
	<table border-style="none" border-width="0" widths="1" padding="0" spacing-after="25">
		<table-row halign="left" >
    		<cell halign="left" valign="top" >
    			<paragraph font="text">    				
	    			${currentDate}
    			</paragraph>   
    			<br/>
				<br/>
    			<paragraph font="text">
    				Dear
	    			${memberRelationShip} ${guardianFirstName} ${guardianLastName}
    			</paragraph>    			

				<br/>    			
    			<paragraph font="text">
    				I have scheduled an appointment for you/your child, 
	    			${juvenileFirstName} ${juvenileMiddleName} ${juvenileLastName} to come to
	    			${serviceLocationName} on ${eventDate} at ${eventTime}. 
					_if_(${eventComments} notEmpty)
						During the interview I would like to discuss the following:
						${eventComments}
					_endif_	
    			</paragraph>
				<br/>    	

				_if_(${inventoryDocuments} notEmpty)
	    			<paragraph font="text">
	    				Please bring the following documents:<br/>
	    				_foreach_(invdocument ${inventoryDocuments} )
							${invdocument}<br/>
						_endfor_
	    			</paragraph>
					<br/>
				_endif_
				
    			<paragraph font="text">
    				If you have any questions please call ${officerPhone}.
    			</paragraph>				    			
    		</cell>
    	</table-row>        				

    	<table-row halign="right" >
    		<cell halign="right" valign="top" >
				<table columns="2" widths="70,30">
					<table-row>
						<cell></cell>
						<cell>
			    			<br/>
			    			<paragraph font="text">    				
			    				Sincerely,
			    				<br/><br/><br/>
				    			${officerFirstName} ${officerLastName}
				    			<br/>
				    			Juvenile Probation Officer
			    			</paragraph>   
			    			<br/>
						</cell>
					</table-row>
				</table>
			</cell>
    	</table-row>
	</table>
	<table columns="1">
	    <table-row halign="left">
    		<cell halign="center">
    			<b>Para ayuda adicional en Espanol favor de comunicarse al siguiente telfono: ${interviewLocationPhone}.</b>
    		</cell>
    	</table-row> 
    </table>	
	<footer>
		<footer-part halign="center">
				<image source="MJCW/JuvenileJustice_Footer.gif" width="500"  scale-to-fit="true"/>
		</footer-part>
	</footer>
    
</document>