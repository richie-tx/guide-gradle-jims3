<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="35" margin-right="35" margin-top="35" margin-bottom="25">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Event Sign in Sheet"/>

	<module>
		<font-def name="title" family="Helvetica" style="bold" size="12"/>
		<font-def name="header" family="Helvetica" style="bold|underline" size="12"/>
		<font-def name="label" family="Helvetica" style="bold" size="11"/>
		<font-def name="text" family="Helvetica" style="normal" size="10"/>
		<font-def name="text-large" family="Helvetica" style="normal" size="12"/>
		<font-def name="text-small" family="Helvetica" style="normal" size="8"/>
		<font-def name="text-italic" family="Helvetica" style="bold|italic" size="11"/>
		<font-def name="tableheader" family="Helvetica" style="bold" size="11"/>
		
		<custom-tag alias="std-title" tag="paragraph">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="small-title" tag="paragraph">
			<attribute name="font" value="text-large"/>
		</custom-tag>
		
		<custom-tag alias="tableheader" tag="paragraph">
			<attribute name="font" value="tableheader"/>
		</custom-tag>
	</module>

    <new-page size="LETTER" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25">
    </new-page>
    	<small-title halign="center"> 
		<b>Attendance must be documented in Project2 within 7 days of event.</b> 
		<br/>
        <br/>
        <br/>
	</small-title>
	<small-title halign="left"> 
		<b>Date/Time:</b> <i>${currentEvent.eventDate}   ${currentEvent.EventTimeFormatted}</i> <br/>
		<br/>
		<b><i>${currentEvent.serviceProviderName}</i></b><i>, the following juveniles are scheduled for this event:</i>
        <br/>
        <br/>
	</small-title>
	<table widths="20,80" columns="2" >
		<table-row>
			<cell halign="left" valign="top"><b>Program Name:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.programName}</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Service Name:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.serviceName}</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Event Type:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.eventType}</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Session Length:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.eventSessionLength} hours</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Total Scheduled:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.currentEnrollment}</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Location Unit:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.serviceLocationName}</i></cell>
		</table-row>
		<table-row>
			<cell halign="left" valign="top"><b>Instructor Name:</b></cell>
			<cell halign="left" valign="top"><i>${currentEvent.instructorName}</i></cell>
		</table-row>
	</table>
	<br/>
	<table widths="5,30,15,50" columns="4" >
		<table-header padding="10">
			<cell halign="left" valign="top" colspan="2"><b><u>Name</u></b></cell>
			<cell halign="left" valign="top"><b><u>Juvenile Number</u></b></cell>
			<cell halign="left" valign="top"><b><u>Signature</u></b></cell>
		</table-header>
		_foreach_(juvElement ${programReferralList})
			<table-row padding="10">
				<cell halign="left" valign="top" colspan="2"><u> ${juvElement.juvenileName} </u></cell>
				<cell halign="left" valign="top"><u> ${juvElement.juvenileId} </u></cell>
				<cell halign="left" valign="top" > _______________________________________________</cell>
			</table-row>
			<table-row>
				<cell></cell>			
				<cell halign="left" valign="top" colspan="3"> JPO: ${juvElement.officerFullName} </cell>
			</table-row>
		_endfor_
		<table-row padding="10">
			<cell halign="left" valign="top" colspan="2">___________________________</cell>
			<cell halign="left" valign="top">____________</cell>
			<cell halign="left" valign="top">_______________________________________________</cell>
		</table-row>
		<table-row padding="10">
			<cell halign="left" valign="top" colspan="2">___________________________</cell>
			<cell halign="left" valign="top">____________</cell>
			<cell halign="left" valign="top">_______________________________________________</cell>
		</table-row>
		<table-row padding="10">
			<cell halign="left" valign="top" colspan="2">___________________________</cell>
			<cell halign="left" valign="top">____________</cell>
			<cell halign="left" valign="top">_______________________________________________</cell>
		</table-row>
		<table-row padding="10">
			<cell halign="left" valign="top" colspan="2">___________________________</cell>
			<cell halign="left" valign="top">____________</cell>
			<cell halign="left" valign="top">_______________________________________________</cell>
		</table-row>
		<table-row padding="10">
			<cell halign="left" valign="top" colspan="2">___________________________</cell>
			<cell halign="left" valign="top">____________</cell>
			<cell halign="left" valign="top">_______________________________________________</cell>
		</table-row>
	</table>
<br/>
</document>