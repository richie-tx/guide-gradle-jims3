<?xml version="1.0" encoding="US-ASCII"?>
<document size="LETTER" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25" rotate="true">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Program Referral List"/>

	<module>
		<font-def name="arial-8" family="arial" size="8"/>
		<font-def name="arial-11-bold" family="arial" style="bold" size="11"/>
		<font-def name="arial-14" family="arial" style="normal" size="14"/>
		<font-def name="hcjpd" family="Helvetica" style="bold" size="16"/>
		<font-def name="label" family="Helvetica" style="bold" size="11"/>
		<font-def name="text" family="Helvetica" style="normal" size="10"/>
		<font-def name="columnheader" family="Helvetica" style="bold|underline" size="10"/>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="paragraph">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="column-header" tag="paragraph">
			<attribute name="font" value="columnheader"/>
		</custom-tag>
	</module>

	<footer padding-top="10">
		<font size="10" color="black">
		<footer-part padding-top="15" halign="left" width="700">
		<table columns="1" widths="100" halign="center">
			<cell valign="top" halign="center">Page : ${pageNumber , nointrprt} of ${pageCount , nointrprt}</cell>
		</table>
		</footer-part>
		</font>
	</footer>

	<!--
        DETAIL PAGES
	-->

	<table columns="2" border-style="none" border-width="0" widths="5,95" padding="0" spacing-after="-30">
	    <cell halign="left" valign="top" leading="1" padding-top="0" line-spacing="1">
	      <paragraph>
		      <image source="MJCW/HarrisCountySeal.jpg" width="75" height="75" scale-to-fit="true"/>
	      </paragraph>
	    </cell>
		<cell font="hcjpd" valign="top" halign="center"><b>HARRIS COUNTY<br/>JUVENILE PROBATION DEPARTMENT</b></cell>
	</table>

	<table columns="1" border-style="none" border-width="0" widths="100" padding="0" spacing-after="15">	
		<table-row>
			<cell font="arial-14" valign="top" halign="center">1200 Congress Houston, TX 77002</cell>
		</table-row>
	</table>
	 
	<table columns="1" border-style="none" border-width="0" widths="100" padding="0" spacing-after="10">	
		<table-row>
			<cell valign="top" halign="center"><shr-label trim-body="true">Service Provider:</shr-label> ${juvServiceProviderName}</cell>
		</table-row>
	</table>
	
	<!-- 
        PROGRAM REFERRALS
	-->
	<table columns="6" border-style="none" border-width="0" widths="22,22,17,10,10,19" padding="0" spacing-after="10">	
		<table-row halign="left">
			<cell><column-header>Juvenile Name</column-header></cell>
			<cell><column-header>Program</column-header></cell>
			<cell><column-header>Referral Status</column-header></cell>
			<cell><column-header>Begin Date</column-header></cell>
			<cell><column-header>End Date</column-header></cell>
			<cell><column-header>JPO Name</column-header></cell>
		</table-row>
	</table>	
	
	_if_ (${referralList} notEmpty)
		_foreach_(referrals ${referralList} 'even' 'odd')
			<table width="100" columns="6" widths="22,22,17,10,10,19" keep-together="true">
				<table-row halign="left">
					<cell valign="top"><shr-text>${referrals.JuvenileFullName}</shr-text></cell>
					<cell valign="top"><shr-text>${referrals.providerProgramName}</shr-text></cell>
					<cell valign="top"><shr-text>${referrals.referralStatusDescription} ${referrals.referralSubStatusDescription}</shr-text></cell>
					<cell valign="top"><shr-text>${referrals.beginDate format "MM/dd/yyyy"}</shr-text></cell>
					<cell valign="top"><shr-text>${referrals.endDate format "MM/dd/yyyy"}</shr-text></cell>
					<cell valign="top"><shr-text>${referrals.officerFullName}</shr-text></cell>
				</table-row>
			</table>
		_endfor_
	_endif_
	
</document>