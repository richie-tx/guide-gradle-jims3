<?xml version="1.0" encoding="US-ASCII"?>
<document size="TABLOID" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false" allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Casefile Chronological Dictation"/>

	<module>
		<font-def name="arial-10" family="arial" size="10"/>
		<font-def name="arial-11-bold" family="arial" style="bold" size="11"/>
		<font-def name="arial-11" family="arial" style="normal" size="11"/>
		<font-def name="arial-12" family="arial" style="normal" size="12"/>
		<font-def name="arial-14" family="arial" style="normal" size="14"/>
		<font-def name="hcjpd" family="Helvetica" style="bold" size="16"/>
		<font-def name="label" family="Helvetica" style="bold" size="10"/>
		<font-def name="text" family="arial" style="normal" size="8"/>
		<font-def name="columnheader" family="Helvetica" style="bold|underline" size="10"/>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="paragraph">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="column-header" tag="paragraph">
			<attribute name="font" value="columnheader"/>
		</custom-tag>
	</module>

	<footer padding-top="10">
		<font size="10" color="black">
		<footer-part padding-top="15" halign="left" width="500">
		<table columns="1" width="100" halign="center">
			<cell halign="center">
				Page : ${pageNumber , nointrprt} of ${pageCount , nointrprt}
			</cell>
			<cell halign="center"><br/></cell>
		</table>
		</footer-part>
		</font>
	</footer>

	<!--
        DETAIL PAGES
	-->

	<table columns="2" border-style="none" border-width="0" widths="5,95" padding="0" spacing-after="15">
		<table-row>
			<cell halign="left" valign="top" leading="1" padding-top="0" line-spacing="1">
				<paragraph>
					<image source="MJCW/HarrisCountySeal.jpg" width="55" height="55" scale-to-fit="true"/>
				</paragraph>
			</cell>
			<cell font="hcjpd" valign="Bottom" halign="center"><b>HARRIS COUNTY<br/>JUVENILE PROBATION DEPARTMENT</b></cell>
		</table-row>
		<table-row>
			<cell font="arial-12" valign="top" halign="center" colspan="2"><b>Probation Services Division/Court Services</b></cell>
		</table-row>
		<table-row>
			<cell font="arial-10" valign="top" halign="center" colspan="2">1200 Congress Houston, TX 77002</cell>
		</table-row>
	</table>
	
	<paragraph halign="center" spacing-after="10" font="arial-12">
		<b>Casefile Chronological Dictation</b>
	</paragraph>

	<table columns="2" border-style="none" border-width="0" widths="50,50" padding="0" spacing-after="10">	
		<table-row>
			<cell><shr-label trim-body="true">Juvenile: </shr-label> ${juvenileName}</cell>
			<cell halign="left"><shr-label trim-body="true">Juvenile ID#: </shr-label> ${juvenileId}</cell>
		</table-row>
		<table-row>	
			<cell><shr-label trim-body="true">Casefile: </shr-label> ${caseFileId}</cell>
			<cell halign="left"><shr-label trim-body="true">Supervision Type: </shr-label> ${supervisionType}</cell>
		</table-row>
		<table-row>
			<cell><shr-label trim-body="true">Probation Officer:</shr-label> ${probationOfficer}</cell>
			<cell></cell>
		</table-row>
	</table>
	
	_if_ (${journalEntries} notEmpty)
	<table width="100" columns="2" widths="15,85">
		_foreach_(journal ${journalEntries} 'even' 'odd')
			<font size="10" color="black">
			<table width="100" columns="2" widths="20,80" keep-together="true">
				<table-row halign="left">
					<cell valign="top"><shr-label trim-body="true">Date/Time: </shr-label></cell>
					<cell valign="top" font="arial-11" no-wrap="false" halign="left"><shr-text><b>${journal.date format "MM/dd/yyyy"} ${journal.time}</b></shr-text></cell>
				</table-row>
				<table-row halign="left">
					<cell valign="top"><shr-label trim-body="true">Subject: </shr-label></cell>
					<cell valign="top" font="text" no-wrap="false" halign="left"><shr-text>${journal.subject}</shr-text></cell>
				</table-row>
				<table-row halign="left">
				   <cell valign="top" colspan="2"><shr-label trim-body="true">Text: </shr-label></cell>
				</table-row>
				<table-row halign="left">
				    <cell colspan="2" valign="top" font="text" no-wrap="false" halign="left"><shr-text>${journal.text}</shr-text></cell>
				</table-row>
				<table-row halign="left">
					<cell valign="top"><shr-label trim-body="true">Update Comments: </shr-label></cell>
					<cell valign="top" font="text" no-wrap="false" halign="left"><shr-text>${journal.updateComments}</shr-text></cell>
				</table-row>
				<table-row halign="left">
					<cell valign="top"><shr-label trim-body="true">Created By: </shr-label></cell>
					<cell valign="top" font="text" no-wrap="false" halign="left"><shr-text>${journal.createdBy}</shr-text></cell>
				</table-row>
				<table-row><cell colspan="2">--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</cell></table-row>
			</table>
			</font>
		_endfor_
	</table>
	_endif_
</document>