<?xml version="1.0" encoding="US-ASCII"?>
<document size="A4" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25">

	<encryption allow-fillin="false" allow-modify-contents="false" allow-degraded-printing="true" allow-screen-readers="false" allow-copy="false"	allow-printing="false"/>
	<meta author="JIMS2, Harris County" creator="JIMS2, Harris County" title="Social History Report"/>

	<module>
		<font-def name="arial-9-bold-u" family="arial" style="bold|underline" size="9"/>
		<font-def name="arial-10-bold-u" family="arial" style="bold|underline" size="10"/>
		<font-def name="arial-10-bold" family="arial" style="bold" size="10"/>
		<font-def name="arial-10" family="arial" size="10"/>
		<font-def name="arial" family="arial" style="normal" size="10"/>
		<font-def name="arial-11-bold" family="arial" style="bold" size="11"/>
		<font-def name="arial-11" family="arial" size="11"/>
		<font-def name="arial-12" family="arial" style="normal" size="12"/>
		<font-def name="arial-12-bold" family="arial" style="bold" size="12"/>
		<font-def name="arial-12-bold-u" family="arial" style="bold|underline" size="12"/>
		<font-def name="arial-14" family="arial" style="normal" size="14"/>
		
		<font-def name="title" family="Helvetica" style="bold" size="12"/>
		<font-def name="header" family="Helvetica" style="bold|underline" size="12"/>
		<font-def name="label" family="Helvetica" style="bold" size="11"/>
		<font-def name="text" family="arial" style="normal" size="11"/>
		<font-def name="text-large" family="Helvetica" style="normal" size="12"/>
		<font-def name="tableheader" family="Helvetica" style="bold|underline" size="10"/>
		<font-def name="columnheader" family="Helvetica" style="bold|underline" size="10"/>

		<custom-tag alias="shr-title" tag="paragraph">
			<attribute name="font" value="title"/>
		</custom-tag>
		
		<custom-tag alias="shr-header" tag="paragraph">
			<attribute name="font" value="header"/>
		</custom-tag>
		
		<custom-tag alias="shr-label" tag="phrase">
			<attribute name="font" value="label"/>
		</custom-tag>
		
		<custom-tag alias="shr-text" tag="paragraph">
			<attribute name="font" value="text"/>
		</custom-tag>
		
		<custom-tag alias="shr-tableheader" tag="phrase">
			<attribute name="font" value="tableheader"/>
		</custom-tag>
		
		<custom-tag alias="column-header" tag="paragraph">
			<attribute name="font" value="columnheader"/>
		</custom-tag>
	</module>
	
	<font-def name="helvetica" family="Helvetica" style="normal" size="12"/>
	<font-def name="geneva" family="georgia" style="normal" size="12"/>

	<footer padding-top="10">
		<font size="10" color="black">
		<footer-part padding-top="15" halign="left" width="500">
		<table columns="1" width="100" halign="center">
			<cell halign="center">
				Page : ${pageNumber , nointrprt} of ${pageCount , nointrprt}
			</cell>
			<cell halign="center"><br/></cell>
		</table>
		</footer-part>
		</font>
	</footer>
	
	<!--
        DETAIL PAGES
	-->
	<new-page size="A4" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25">
	</new-page>
	
    <table columns="2" border-style="none" border-width="0" widths="100" padding="0" spacing-after="10"> 
		<cell font="arial-14" valign="bottom" halign="Center">
			<b>Report to Referee Initiation</b>
		</cell>
	</table>
	
	<table width="100" columns="6" widths="16,22,16,10,16,16" padding="1" border-style="none" border-width="0">
		
		<table-row halign="left">
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top">Name:</cell>
			<cell halign="left" valign="top" colspan="3" ><shr-text>${juvenileName}</shr-text></cell>
			
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top" >Juvenile #:</cell>
			<cell halign="left" valign="top" ><shr-text>${juvenileNumber}</shr-text></cell>
		</table-row>
		
		<table-row halign="left">
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top" >Race:</cell>
			<cell halign="left" valign="top" ><shr-text>${race}</shr-text></cell>
			
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top" >Multiracial?</cell>
			<cell halign="left" valign="top" ><shr-text>${multiracialAsString}</shr-text></cell>
			
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top" >Hispanic?</cell>
			<cell halign="left" valign="top" ><shr-text>${hispanicAsString}</shr-text></cell>
		</table-row>
		
		<table-row halign="left">
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top">Gender:</cell>
			<cell halign="left" valign="top" colspan="3" ><shr-text>${gender}</shr-text></cell>
			
			<cell halign="right" font="arial-10-bold" no-wrap="true" valign="top" >Current Age:</cell>
			<cell halign="left" valign="top" ><shr-text>${ageInYears}</shr-text></cell>
		</table-row>
	</table>
	
	<br/>
	<br/>
	
	<table width="100" columns="2" halign="left" spacing-after="10" border-style="none" border-width="0">
		
		<cell colspan="2" halign="left" font="arial-11">
			<table width="100" columns="3" halign="left" spacing-after="0" border-style="none" border-width="0">
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true">DOB:</shr-label> ${dateOfBirth}
				</cell>
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true">Verified?</shr-label> ${verifiedDOBAsString}
				</cell>
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true"></shr-label> 
				</cell>
			</table>
		</cell>
		
		<cell colspan="2" halign="left" font="arial-11">
			<shr-label trim-body="true">Petition #:</shr-label> ${allPetitionNumForGeneric}
		</cell>
		
		<cell colspan="2" halign="left" font="arial-11">
			<table width="100" columns="3" halign="left" spacing-after="0" border-style="none" border-width="0">
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true">Court Date:</shr-label> ${presentOffense.courtDate}
				</cell>
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true">Court:</shr-label> ${presentOffense.courtCodeId}
				</cell>
				<cell halign="left" font="arial-11">
					<shr-label trim-body="true">Detention Admit Date:</shr-label> ${detentionAdmitDate}
				</cell>
			</table>
		</cell>
		
	</table>
	<br/>
	
	<!--
        PRESENT ALLEGED OFFENSE
	-->
	<shr-header halign="center">PRESENT ALLEGED OFFENSE</shr-header><br/>
	<table width="100" columns="4" widths="17,33,17,33" border-style="none" border-width="0">
		_foreach_(offense ${juvenileOffenses} 'even' 'odd')
			<if cond="${offense.presentAllegedOffense==true}"> 
			
				<table-row halign="left">
					<cell font="arial-10-bold" no-wrap="true" valign="bottom">Referral #:</cell>
					<cell halign="left" valign="bottom" font="arial">${offense.referralNumber}</cell>
				</table-row>
				<table-row halign="left">
					<cell font="arial-10-bold" no-wrap="true" valign="top" >Nature of Offense:</cell>
					<cell halign="left" valign="top" ><shr-text>${offense.presentOffense}</shr-text></cell>
					
					<cell font="arial-10-bold" no-wrap="true" valign="top" >Date of Offense:</cell>
					<cell halign="left" valign="top" ><shr-text>${offense.offenseDate}</shr-text></cell>
				</table-row>
			</if>
		_endfor_
	</table>
	<br/>
	
	<!--
        PRESENT REFERRAL
	-->
	<shr-header halign="center">PRESENT REFERRAL</shr-header><br/>
	<table width="100" columns="4" widths="17,33,17,33" border-style="none" border-width="0">
		_foreach_(offense ${presentOffensesForGeneric} 'even' 'odd')
			<if cond="${offense.included==true}"> 
				<table-row halign="left">
					<cell font="arial-10-bold" no-wrap="true" valign="bottom">Referral #:</cell>
					<cell halign="left" valign="bottom" font="arial">${offense.referralNumber}</cell>
				</table-row>
				<table-row halign="left">
					<cell font="arial-10-bold" no-wrap="true" valign="top" >Nature of Offense:</cell>
					<cell halign="left" valign="top" ><shr-text>${offense.presentOffense}</shr-text></cell>
					
					<cell font="arial-10-bold" no-wrap="true" valign="top" >Date of Offense:</cell>
					<cell halign="left" valign="top" ><shr-text>${offense.offenseDate}</shr-text></cell>
				</table-row>
			</if>
		_endfor_
	</table>
	<br/>
	
	<!--
        FAMILY 
	-->
	<shr-header halign="center">FAMILY</shr-header>
	<br/>
	<table width="100" columns="4" widths="15,35,15,35" padding="1" border-style="none" border-width="0">
		_foreach_(info ${familyInformation} 'even' 'odd')
			<if cond="${info.included==true}"> 
			
			<!-- Guardian/Relationship -->
			<table-row halign="left">
				<cell font="arial-10-bold" no-wrap="true">Name:</cell>
				<cell padding-left="5" halign="left"><shr-text>${info.familyMemberName}</shr-text></cell>
				
				<cell font="arial-10-bold" no-wrap="true">Relationship:</cell>
				<cell padding-left="5" halign="left"><shr-text>${info.relationship}</shr-text></cell>
				
			</table-row>
			<!-- Address/Phone -->
			<table-row halign="left">
				<cell font="arial-10-bold" no-wrap="true" valign="top" halign="right">Address:</cell>
				<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.address}</shr-text></cell>
				
				<cell font="arial-10-bold" no-wrap="true" valign="top" halign="right">Phone#:</cell>
				<cell padding-left="5" valign="top" halign="left"><shr-text>${info.formattedPhone}</shr-text></cell>
			</table-row>
			<!-- Incarcerated/Deceased/Lives With-->
			<table-row>
				<cell colspan="4">
					<table width="100" columns="8" widths="15,10,15,10,15,10,15,10" padding="1" border-style="none" border-width="0">
						<table-row halign="left">
							<cell font="arial-10-bold" no-wrap="true" halign="right">Guardian:</cell>
							<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.guardianStatusAsStringYesOnly}</shr-text></cell>
						
							<cell font="arial-10-bold" no-wrap="true" halign="right">Lives With:</cell>
							<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.inHomeAsStringYesOnly}</shr-text></cell>
							
							<cell font="arial-10-bold" no-wrap="true" halign="right">Primary Care Giver:</cell>
							<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.primaryCareGiverAsStringYesOnly}</shr-text></cell>

							<cell font="arial-10-bold" no-wrap="true" halign="right">Incarcerated:</cell>
							<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.incarceratedAsStringYesOnly}</shr-text></cell>
							
							<cell font="arial-10-bold" no-wrap="true" halign="right">Deceased:</cell>
							<cell padding-left="5" valign="bottom" halign="left"><shr-text>${info.deceasedAsStringYesOnly}</shr-text></cell>
						</table-row> 
					</table>
				</cell>
			</table-row>
			<!-- Blank Row -->
			<table-row><cell><br/></cell></table-row>
			</if>
		_endfor_
	</table>
	<br/>
	
	<!--
        SCHOOL
	-->
	_if_ (${educationalHistory} notEmpty)
		<shr-header halign="center">SCHOOL</shr-header>
		<br/>
		<table width="100" columns="4" widths="30,10,14,15" padding="3">
			<table-header halign="left">
				<cell><column-header>Name</column-header></cell>
				<cell><column-header>Grade</column-header></cell>
				<cell><column-header>Program</column-header></cell>
				<cell><column-header>Enrollment Status</column-header></cell>
			</table-header>
			_foreach_(info ${educationalHistory} 'even' 'odd')
				_if_( ${info.included} )
				<table-row>
					<cell halign="left" valign="top"><shr-text>${info.district}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${info.gradeLevel}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${info.program}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${info.enrollmentStatus}</shr-text></cell>
				</table-row>
				_endif_
			_endfor_
		</table>
		<br/>
	_endif_
	
	<!--
        Detention/Facility History
	-->
	_if_ (${juvenileFacilityStayRecord} notEmpty)
		<shr-header halign="center">DETENTION/FACILITY HISTORY</shr-header><br/>
		<table width="100" columns="7" padding="3" widths="9,23,9,15,15,19,10">
			<table-row halign="left">
				<cell><column-header>Referral</column-header></cell>
				<cell><column-header>Facility</column-header></cell>
				<cell><column-header>Reason</column-header></cell>
				<cell><column-header>Detained</column-header></cell>
				<cell><column-header>Released</column-header></cell>
				<cell><column-header>Released To</column-header></cell>
				<cell><column-header>Released By</column-header></cell>
			</table-row>
			_foreach_(stayRecord ${juvenileFacilityStayRecord} 'even' 'odd')					
				<table-row>
					<cell halign="left" valign="top"><shr-text>${stayRecord.referralNumber}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${stayRecord.facilityName}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${stayRecord.admitReason}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${stayRecord.admitDate}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${stayRecord.releaseDate}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${stayRecord.releaseToDesc}</shr-text></cell>	
					<cell halign="left" valign="top"><shr-text>${stayRecord.releaseBy}</shr-text></cell>
				</table-row>
			_endfor_
		</table>
		<br/>
	_endif_
	
	<!--
        PREVIOUS REFERRALS
	-->
	<shr-header halign="center">PREVIOUS REFERRALS</shr-header>
    <br/>
	<table width="100" columns="5" padding="3" widths="9,14,35,29,13">
		<table-row halign="left">
			<cell><column-header>Referral Number</column-header></cell>
			<cell><column-header>Referral Date</column-header></cell>
			<cell><column-header>Offense/Allegation</column-header></cell>
			<cell><column-header>Disposition</column-header></cell>
			<cell><column-header>Disposition Date</column-header></cell>
		</table-row>
		
   		_foreach_(refW ${previousReferralDetails} 'even' 'odd')
		_if_(${refW.petitionAvailable})
					<table-row>
					<cell halign="left" valign="top"><shr-text>${refW.referralData.referralNumber}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.referralData.referralDate}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${refW.petitionAllegation}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.courtDisposition}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.referralData.courtDate}</shr-text></cell>
	    		</table-row>
		  _else_
	    	_foreach_(offenseIn ${refW.offenses} 'even' 'odd')
		    	<table-row>
		    		<cell halign="left" valign="top"><shr-text>${refW.referralData.referralNumber}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.referralData.referralDate}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${offenseIn.petitionAllegation}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.referralData.intakeDecision}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${refW.intakeDate}</shr-text></cell>
	    		</table-row>
		    _endfor_
		  _endif_
		_endfor_	
	</table>

	<!--
        END PREVIOUS REFERRALS
	-->

	
	<!--
        START Justice of the Peace Court Referrals
	-->
	_if_ (${JPCourtReferralConvictions} notEmpty)
		<br/>
		<shr-label halign="center">Justice of the Peace Court Referrals:</shr-label>
	    <br/>
		<table width="100" columns="5" padding="3">
			<table-row halign="left">
				<cell><column-header>Court</column-header></cell>
				<cell><column-header>Case Number</column-header></cell>
				<cell><column-header>Offense Description</column-header></cell>
				<cell><column-header>File Date</column-header></cell>
				<cell><column-header>Date of Conviction</column-header></cell>
			</table-row>
			_foreach_(referral ${JPCourtReferralConvictions} 'even' 'odd')
	    		<table-row>
	    			<cell halign="left" valign="top"><shr-text>${referral.courtName}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${referral.caseNumber}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${referral.offenseDescription}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${referral.fileDate}</shr-text></cell>
	    			<cell halign="left" valign="top"><shr-text>${referral.convictionDate}</shr-text></cell>
	    		</table-row>
			_endfor_
		</table>
		<br/>
	_endif_
    <!--
        END Justice of the Peace Court Referrals
	-->
    <!--
        WARRANT HISTORY
	-->
    _if_ (${refInitiationWarrantHistory} notEmpty)
			<br/>
			<shr-header halign="center">WARRANTS</shr-header>
			<br/>
		
		<table width="100" columns="4" padding="3">
			<table-row halign="left">
				<cell><column-header>Warrant Type</column-header></cell>
				<cell><column-header>Initiated</column-header></cell>
				<cell><column-header>Executed</column-header></cell>
				<cell><column-header>Status</column-header></cell>
			</table-row>
			_foreach_(warrant ${refInitiationWarrantHistory} 'even' 'odd')
				<table-row>
					<cell halign="left" valign="top"><shr-text>${warrant.warrantType}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${warrant.dateOfIssue}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${warrant.serviceDate}</shr-text></cell>
					<cell halign="left" valign="top"><shr-text>${warrant.warrantStatus}</shr-text></cell>
				</table-row>
			_endfor_
		</table>
		<br/>
	_endif_
</document>
