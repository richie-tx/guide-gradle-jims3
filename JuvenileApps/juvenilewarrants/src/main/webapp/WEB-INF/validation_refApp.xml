<?xml version="1.0" encoding="ISO-8859-1" ?>

<!--
	Validation Rules for the Struts Example Web Application
	$Id: validation.xml,v 1.4 2002/07/21 18:42:43 jholmes Exp $
-->
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>

	<!-- ========== Default Language Form Definitions ===================== -->
	<formset>

		<form name="loginForm">

			<field property="userID" depends="required">
				<arg0 key="prompt.userID" />
			</field>

			<field property="password" depends="required">
				<arg0 key="prompt.password" />
			</field>
		</form>

		<form name="updatePasswordForm">

			<field property="password" depends="required,minlength,maxlength">
				<arg0 key="prompt.password" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />
				<arg1 key="${var:maxlength}" name="maxlength" resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>8</var-value>
				</var>
				<var>
					<var-name>minlength</var-name>
					<var-value>4</var-value>
				</var>
			</field>
			
			<field property="newPassword" depends="required,minlength,maxlength">
				<arg0 key="prompt.newPassword" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />
				<arg1 key="${var:maxlength}" name="maxlength" resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>8</var-value>
				</var>
				<var>
					<var-name>minlength</var-name>
					<var-value>4</var-value>
				</var>
			</field>

			<field property="confirmPassword" depends="required,minlength,maxlength">
				<arg0 key="prompt.confirmPassword" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />
				<arg1 key="${var:maxlength}" name="maxlength" resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>8</var-value>
				</var>
				<var>
					<var-name>minlength</var-name>
					<var-value>4</var-value>
				</var>
			</field>
		</form>
		
		<form name="userForm">

			<field property="firstName" depends="required,mask">
				<arg0 key="prompt.firstName" />				
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{1,20}$</var-value>
				</var>
			</field>
			
			<field property="middleName" depends="mask">
				<arg0 key="prompt.middleName" />
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{1,20}$</var-value>
				</var>
			</field>
			
			<field property="lastName" depends="required,mask">
				<arg0 key="prompt.lastName" />			
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{1,20}$</var-value>
				</var>
			</field>
			
			<field property="dateOfBirth" depends="required">
				<arg0 key="prompt.dateOfBirth" />
			
			</field>
					
			<field property="agency" depends="required">
				<arg0 key="prompt.agency" />				
				
			</field>
					
			<field property="ssn1" depends="mask">
				<arg0 key="prompt.ssn1" />				
				<msg name="mask" key="errors.numeric" />
								
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,3}$</var-value>
				</var>
			</field>
			
			<field property="ssn2" depends="mask">
				<arg0 key="prompt.ssn2" />								
				<msg name="mask" key="errors.numeric" />
								
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,2}$</var-value>
				</var>
			</field>
			
			<field property="ssn3" depends="mask">
				<arg0 key="prompt.ssn3" />			
				<msg name="mask" key="errors.numeric" />
		
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,4}$</var-value>
				</var>
			</field>
			
			<field property="phoneNo1" depends="required,minlength,mask">
				<arg0 key="prompt.phone1" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />
				<msg name="mask" key="errors.numeric" />
				
				<var>
					<var-name>minlength</var-name>
					<var-value>3</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,3}$</var-value>
				</var>
			</field>
			
			<field property="phoneNo2" depends="required,minlength,mask">
				<arg0 key="prompt.phone2" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />
				<msg name="mask" key="errors.numeric" />
				
				<var>
					<var-name>minlength</var-name>
					<var-value>3</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,3}$</var-value>
				</var>
			</field>
			
			<field property="phoneNo3" depends="required,minlength,mask">
				<arg0 key="prompt.phone3" />
				<arg1 key="${var:minlength}" name="minlength" resource="false" />				
				<msg name="mask" key="errors.numeric" />
				
				<var>
					<var-name>minlength</var-name>
					<var-value>4</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]{0,4}$</var-value>
				</var>
			</field>
			
			<field property="email" depends="mask">
				<arg0 key="prompt.email" />
				<msg name="mask" key="errors.email" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z][a-zA-Z0-9]*@[a-zA-Z0-9]+\.(com)|(org)|(edu)|(biz)|(net)|(gov)$</var-value>
				</var>
			</field>
			
			<field property="requestor" depends="mask">
				<arg0 key="prompt.requestor" />				
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{0,20}$</var-value>
				</var>
				
			</field>
			
			
		</form>
		
		<form name="partyInquiryForm">

			<field property="personNumber" depends="mask">
				<arg0 key="prompt.personNumber" />		
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{1,20}$</var-value>
				</var>
			</field>
			
			<field property="party" depends="mask">
				<arg0 key="prompt.party" />		
				<msg name="mask" key="errors.alphabetic" />
				
				<var>
					<var-name>mask</var-name>
					<var-value>[^0-9]{1,20}$</var-value>
				</var>
			</field>
			
		</form>

	</formset>

</form-validation>