<?xml version="1.0"?>

<!-- when strict is *true* the check evaluates the allow and disallow entries-->

<!-- when strict is *false* the check evaluates the disallow entries, all other imports are allowed -->

<!-- the default strict value is *false*  -->

<package-control>	
      
	<package name="pd" strict="true">
		<!-- framework packages -->
		<allow name="mojo"/>
		<allow name="org.jdom"/>
		<allow name="gnu.regexp"/>
		
		<!-- app packages -->
		<allow name="messaging"/>
		<allow name="naming"/>
		<allow name="pd"/>	
	  
		<!--  Java packages -->
		<allow name="java"/>
		<allow name="javax"/>
	
		<!-- disallow -->
		<!-- disallow name="mapping"/-->
		<disallow name="ui"/>
		
	</package>	
  
	<package name="ui" strict="true">
		<!-- framework packages -->
		<allow name="mojo"/>
		<allow name="org.apache"/>		
		<allow name="gnu.regexp"/>
		
		<!-- app packages -->
		<allow name="messaging"/>
		<allow name="naming"/>		
		<allow name="ui"/>
	  
		<!--  Java packages -->
		<allow name="java"/>
		<allow name="javax"/>
		
		<!-- disallow -->
		<!--  disallow name="mapping"/-->
		<disallow name="pd"/>
	</package>
	
	<package name="mapping" strict="true">
		<!-- framework packages -->
		<allow name="mojo"/>
		
		<!-- app packages -->
		<allow name="messaging"/>
		<allow name="mapping"/>
		<allow name="naming"/>		
	  
		<!--  Java packages -->
		<allow name="java"/>
		<allow name="javax"/>
		
		<!-- disallow -->
		<!-- disallow name="pd"/-->
		<disallow name="ui"/>		
	</package>
	
	<package name="messaging">
		<!-- framework packages -->
		<allow name="mojo"/>
		<allow name="messaging"/>	
		<!-- app packages -->		
		<allow name="naming"/>
	  
		<!--  Java packages -->
		<allow name="java"/>		
		<allow name="javax"/>
	
		<!-- disallow -->
		<disallow name="pd"/>
		<disallow name="ui"/>
		
	</package>
  
</package-control>