<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration>

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
   <appender name="Normal" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" value="%d (%F:%L) %-5p %c - %m"/>
    </layout>       
   </appender>
   <appender name="blank" class="org.apache.log4j.varia.NullAppender">
   </appender>

   <plugin name="SocketReceiver" class="org.apache.log4j.net.SocketHubReceiver">
      <param name="Port" value="4449"/>
      <param name="Host" value="10.30.80.118"/>      
   </plugin>

  <logger name="GUIController" additivity="false">
    <level value ="debug" />
    <appender-ref ref="Normal"/>
  </logger>



</log4j:configuration>