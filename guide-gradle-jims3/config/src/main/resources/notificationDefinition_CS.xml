<NotificationDefinitions>

	<Notification topic="CS.LOCATION.INACTIVATED" defaultSeverity="M">
		<Source value="jims2notification@itc.hctx.net" />
		<Destination transportType="notice"
			bean="messaging.administerlocation.reply.LocationNotificationResponseEvent"
			property="identity" context="respEvent" />
		<Template>
			TO:
			#{messaging.administerlocation.reply.LocationNotificationResponseEvent.serviceProviderName}
			#{messaging.administerlocation.reply.LocationNotificationResponseEvent.serviceProviderFax}


			#{messaging.administerlocation.reply.LocationNotificationResponseEvent.notificationMessage}.
		</Template>
	</Notification>

	<Notification topic="CS.SPN.CONSOLIDATED" defaultSeverity="M">
		<Source transportType="email"
			value="jims2notification@itc.hctx.net" />
		<Destination transportType="email"
			value="JimsDataControlGroup@hctx.net" />
		<Template>
			JIMS2 SPN Consolidation initiated from
			#{mojo.messaging.securitytransactionsevents.reply.UserInfoResponseEvent.firstName}
			#{mojo.messaging.securitytransactionsevents.reply.UserInfoResponseEvent.lastName}
			, #{pd.contact.agency.Department.agencyName}.
		</Template>
	</Notification>

	<Notification topic="SP.SERV.INACTIVATED" defaultSeverity="M">
		<Source value="jims2notification@itc.hctx.net" />
		<Destination transportType="notice"
			bean="pd.security.JIMS2Account" property="JIMS2LogonId"
			context="originator" />
		<Destination transportType="notice"
			bean="pd.security.JIMS2Account" property="JIMS2LogonId"
			context="context1" />
		<Destination transportType="notice" value="jirac" />
		<Template>
			TO:
			#{pd.supervision.administerserviceprovider.ServiceProvider.serviceProviderName}
			#{pd.supervision.administerserviceprovider.ServiceProvider.fax}
			Please be advised that
			#{pd.supervision.administerserviceprovider.ServiceProvider.serviceName}
			will no longer be provided and future service events have
			been cancelled.
		</Template>
	</Notification>

</NotificationDefinitions>